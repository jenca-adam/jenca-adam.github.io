      <a href="/search/?searchtype=author&amp;query=Ellingwood%2C+N">Nathan Ellingwood</a>, 
      
      <a href="/search/?searchtype=author&amp;query=Harvey%2C+E">Evan Harvey</a>, 
      
      <a href="/search/?searchtype=author&amp;query=Kelley%2C+B">Brian Kelley</a>, 
      
